<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/captureCard"
            android:layout_width="350dp"
            android:layout_height="100dp"
            motion:transitionEasing="cubic(0.12,0.53,0.77,0.6)"
            motion:layout_constraintTop_toBottomOf="@+id/idunno"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customIntegerValue="360" />
        </Constraint>
        <Constraint
            android:id="@+id/floatingActionButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintTop_toBottomOf="@+id/captureCard"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:rotationX="360"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/newCap"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintTop_toBottomOf="@+id/captureCard"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="visible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/newCap"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintTop_toBottomOf="@+id/captureCard"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/translationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/newCap"
            motion:layout_editor_absoluteX="15dp"
            android:layout_marginTop="90dp" />
        <Constraint
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/captureCard"
            motion:layout_constraintTop_toBottomOf="@+id/idunno"
            android:layout_marginTop="40dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeInOut" >
        <OnClick motion:targetId="@id/floatingActionButton"
            motion:clickAction="transitionToStart" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:motionInterpolator="easeInOut">
        <OnClick motion:targetId="@id/newCap"
            motion:clickAction="transitionToStart" />
    </Transition>
</MotionScene>